<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    <title>About Page</title>
    <link>{{ site.url }}/about</link>
    <description>{{ site.description }}</description>
    <item>
      <title>About</title>
      <link>{{ site.url }}/about</link>
      <description>
        {% assign content_page = site.pages | where: "path", "about.md" | first %}
        {{ content_page }}
      </description>
      <pubDate>{{ content_page.date | date_to_rfc822 }}</pubDate>
    </item>
  </channel>
</rss>
